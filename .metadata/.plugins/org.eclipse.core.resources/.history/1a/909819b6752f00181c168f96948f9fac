
public class Twentyfive {

	public static void main(String[] args) {
		System.out.println("25번 문제");
		// 25.다음과 같은 출력이 나오도록 프로그램을 작성하시오.
		//    (1) *********** (2)54321012345
		//        *********      432101234
		//        *******        3210123
		//        *****          21012
		//        ***            101
		//        *              0
		//        ***            101 
		//        *****          21012 
		//        *******        3210123 
		//        *********      432101234 
		//        ***********    54321012345
		
		int i;
		int a;
		System.out.println("(1)번 출력");
		for (a=12; a>=2; a=a-2) {
			for(i=1; i<=a; i++) {
				if (i!=a)
					System.out.print("*");
				else
					System.out.println("");
			}
		}
		for (a=4; a<=12; a=a+2) {
			for(i=1; i<=a; i++) {
				if (i!=a)
					System.out.print("*");
				else if (i == 1)
					continue;
				else
					System.out.println("");
			}
		}
		
		System.out.println("(2)번 출력");
		for (a=12; a>=2; a=a-2) {
			for(i=1; i<=a; i++) {
				if (i!=a)
					if (i != a/2)
						System.out.print(6-i);
					else
						
				else
					System.out.println("");
			}
		}
		for (a=4; a<=12; a=a+2) {
			for(i=1; i<=a; i++) {
				if (i!=a)
					System.out.print("*");
				else if (i == 1)
					continue;
				else
					System.out.println("");
			}
		}
		System.out.println("==============프로그램 종료==============");
	}

}
