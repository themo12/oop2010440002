
public class Loop {

	public static void main(String[] args) {
		// 1~10 정수를 화면에 출력
//		int i;
//		for (i=1; i<=10; i++) {
//			System.out.println(i);
//		}
//		int i; // i는 루프변수
//		i = 1; // 1.루프변수 초기화
//		while (i<=10) { // 2.루프 조건식
//			System.out.println(i); // 3. 루프문
//			i++; // 4. 루프 변수 변화
//		}
		// 1~10 정수를 다 더하기
		int i, sum; // i, sum은 루프변수
		i = 1; sum = 0; // 1.루프변수 초기화
		while (i<=10) { // 2.루프 조건식
			sum = sum + i; // 3. 루프문
			i++; // 4. 루프 변수 변화
		}
		System.out.println("sum = " + sum);
		System.out.println("==============프로그램 종료==============");
	}
}
