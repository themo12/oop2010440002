
public class Twentyfive {

	public static void main(String[] args) {
		System.out.println("25번 문제");
		// 25.다음과 같은 출력이 나오도록 프로그램을 작성하시오.
		//    (1) *********** (2)54321012345
		//        *********      432101234
		//        *******        3210123
		//        *****          21012
		//        ***            101
		//        *              0
		//        ***            101 
		//        *****          21012 
		//        *******        3210123 
		//        *********      432101234 
		//        ***********    54321012345
		
		int i;
		int a=12;
		int x;
		System.out.println("(1)번 출력");
		for (x=1; x<=2; x++) {
			if (a!=2 && a!=0) {
				while (a>=2) {
					for (i=1; i<=a; i++) {
						if (i!=a)
							System.out.print("*");
						else
							System.out.println("");
					}
					a=a-2;
				}
			}
			else if (a==0) {
				while (a<=12) {
					for (i=2; i<=a; i++) {
						if (i!=a)
							System.out.print("*");
						else
							System.out.println("");
					}
					a=a+2;
				}
				
			}
		}
		System.out.println("==============프로그램 종료==============");
	}

}
