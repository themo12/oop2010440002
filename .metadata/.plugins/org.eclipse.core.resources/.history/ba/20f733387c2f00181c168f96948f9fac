
public class Twentyfive {

	public static void main(String[] args) {
		System.out.println("25번 문제");
		// 25.다음과 같은 출력이 나오도록 프로그램을 작성하시오.
		//    (1) *********** (2)54321012345
		//        *********      432101234
		//        *******        3210123
		//        *****          21012
		//        ***            101
		//        *              0
		//        ***            101 
		//        *****          21012 
		//        *******        3210123 
		//        *********      432101234 
		//        ***********    54321012345
		
		int i, j;
	      for(i=0; i<6; i++) {
	 
	          // 앞에 빈공간 맞춤
	          for(j=i; j<6; j++)
	        	  System.out.print(" ");     
	 
	          // 54321 형태출력 
	          for(j=0; j<=i; j++)
	        	  System.out.print(0 + i - j);    
	 
	          // 12345 형태 출력      
	          for(j=1; j<=i; j++)
	        	  System.out.print(0 + j); 
	 
	         // 줄바꿈
	          System.out.println("");                   
		System.out.println("==============프로그램 종료==============");
	}

}
